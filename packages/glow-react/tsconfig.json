{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "CommonJS",
    "paths": {
      "@hooks/*": ["src/hooks/*"]
    },
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "dist/",
    "declaration": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts*"]
}
