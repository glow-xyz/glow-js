{
    "name": "@glow-xyz/wallet-standard",
    "version": "1.0.0-rc.0",
    "type": "module",
    "sideEffects": false,
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./lib/types/index.d.ts",
    "exports": {
        "require": "./lib/cjs/index.js",
        "import": "./lib/esm/index.js",
        "types": "./lib/types/index.d.ts"
    },
    "files": [
        "lib",
        "src"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "pnpm run clean && pnpm run tsc && pnpm run package",
        "clean": "shx mkdir -p lib && shx rm -rf lib",
        "tsc": "tsc --build --verbose tsconfig.json",
        "package": "shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
        "fmt": "prettier --write '{*,**/*}.{ts,tsx,js,jsx,json}'",
        "lint": "prettier --check '{*,**/*}.{ts,tsx,js,jsx,json}' && eslint .",
        "lint:fix": "pnpm run fmt && eslint --fix ."
    },
    "dependencies": {
        "@glow-xyz/glow-client": "^1.4.0",
        "@solana/wallet-standard-features": "^1.0.0-rc.0",
        "@wallet-standard/base": "^1.0.0-rc.0",
        "@wallet-standard/features": "^1.0.0-rc.0",
        "bs58": "^5.0.0",
        "buffer": "^6.0.3"
    },
    "devDependencies": {
        "@types/node": "^18.8.5",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "eslint": "8.22.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-require-extensions": "^0.1.1",
        "prettier": "^2.7.1",
        "shx": "^0.3.4",
        "typedoc": "^0.23.10",
        "typescript": "~4.7.4"
    }
}
